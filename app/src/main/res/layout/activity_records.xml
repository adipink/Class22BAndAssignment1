<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_openbackground"
    tools:context=".activities.Activity_Records">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/records_BTN_playAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:backgroundTint="#59CCFF"
        app:cornerRadius="20dp"
        android:text="play again"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/records_BTN_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:backgroundTint="#59CCFF"
        app:cornerRadius="20dp"
        android:text="back"
        />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/records_LBL_topTen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="TOP 10"
            android:textColor="#000000"

            android:textSize="23sp" />


        <FrameLayout
            android:id="@+id/records_LAY_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#45B1ABAB" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/records_LBL_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="MAP"
            android:textColor="#000000"
            android:textSize="23sp" />


        <FrameLayout
            android:id="@+id/records_LAY_map"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#45B1ABAB" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>