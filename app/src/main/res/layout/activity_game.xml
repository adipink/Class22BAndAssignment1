<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Game"
    android:background="@drawable/ic_background"
    android:keepScreenOn="true">

    <LinearLayout
        android:id="@+id/game_LinLay_scores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/game_IMG_heart1"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_heart" />

            <ImageView
                android:id="@+id/game_IMG_heart2"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_heart" />

            <ImageView
                android:id="@+id/game_IMG_heart3"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_heart" />

        </androidx.appcompat.widget.LinearLayoutCompat>



        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/game_LBL_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="10dp"
            android:text="0"
            android:textColor="#000000"
            android:textSize="50sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/game_LinLay_scores"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <View style="@style/HorizontalDivider" />


        <LinearLayout
            android:id="@+id/game_LinLay_row0"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <View style="@style/VerticalDivider" />

            <!--images of the grid boxes-->
            <ImageView
                android:id="@+id/game_IMG_square0"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="7dp"
                android:tag="0" />

            <View style="@style/VerticalDivider" />

            <ImageView
                android:id="@+id/game_IMG_square1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="7dp"
                android:tag="1" />

            <View style="@style/VerticalDivider" />

            <ImageView
                android:id="@+id/game_IMG_square2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="7dp"
                android:tag="2" />

            <View style="@style/VerticalDivider" />
        </LinearLayout>

        <View style="@style/HorizontalDivider" />

        <LinearLayout
            android:id="@+id/game_LinLay_row1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <View style="@style/VerticalDivider" />

            <ImageView
                android:id="@+id/game_IMG_square3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="7dp"
                android:tag="3" />

            <View style="@style/VerticalDivider" />

            <ImageView
                android:id="@+id/game_IMG_square4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="7dp"
                android:tag="4" />

            <View style="@style/VerticalDivider" />

            <ImageView
                android:id="@+id/game_IMG_square5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="7dp"
                android:tag="5" />

            <View style="@style/VerticalDivider" />
        </LinearLayout>

        <View style="@style/HorizontalDivider" />

        <LinearLayout
            android:id="@+id/game_LinLay_row2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <View style="@style/VerticalDivider" />

            <ImageView
                android:id="@+id/game_IMG_square6"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="7dp"
                android:tag="6" />

            <View style="@style/VerticalDivider" />

            <ImageView
                android:id="@+id/game_IMG_square7"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="7dp"
                android:tag="7" />

            <View style="@style/VerticalDivider" />

            <ImageView
                android:id="@+id/game_IMG_square8"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="7dp"
                android:tag="8" />

            <View style="@style/VerticalDivider" />
        </LinearLayout>

        <View style="@style/HorizontalDivider" />

        <LinearLayout
            android:id="@+id/game_LinLay_row3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <View style="@style/VerticalDivider" />

            <ImageView
                android:id="@+id/game_IMG_square9"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="7dp"
                android:tag="9" />

            <View style="@style/VerticalDivider" />

            <ImageView
                android:id="@+id/game_IMG_square10"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="7dp"
                android:tag="10" />

            <View style="@style/VerticalDivider" />

            <ImageView
                android:id="@+id/game_IMG_square11"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="7dp"
                android:tag="11" />

            <View style="@style/VerticalDivider" />
        </LinearLayout>

        <View style="@style/HorizontalDivider" />

        <LinearLayout
            android:id="@+id/game_LinLay_row4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <View style="@style/VerticalDivider" />

            <ImageView
                android:id="@+id/game_IMG_square12"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="7dp"
                android:tag="12" />

            <View style="@style/VerticalDivider" />

            <ImageView
                android:id="@+id/game_IMG_square13"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="7dp"
                android:tag="13" />

            <View style="@style/VerticalDivider" />

            <ImageView
                android:id="@+id/game_IMG_square14"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="7dp"
                android:tag="14" />

            <View style="@style/VerticalDivider" />

        </LinearLayout>

        <View style="@style/HorizontalDivider" />

    </LinearLayout>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:orientation="horizontal">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/game_BTN_up"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="170dp"
                android:background="@drawable/ic_arrowup" />
        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/game_BTN_left"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="125dp"
                android:background="@drawable/ic_arrowleft" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/game_BTN_right"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="40dp"
                android:background="@drawable/ic_arrowright" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/game_BTN_down"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="170dp"
                android:background="@drawable/ic_arrowdown" />
        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>